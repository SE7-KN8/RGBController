<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Network-Config">
        <EditTextPreference
            app:defaultValue="192.168.4.1"
            app:key="ip"
            app:title="IP"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="91"
            app:key="port"
            app:title="Port"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Info">

        <Preference
            app:summary="RGBController Version 1.0"
            app:title="Version" />

        <Preference
            app:summary="Developed by Sebastian Knackstedt"
            app:title="Credits" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>